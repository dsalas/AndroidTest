<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/darkslategray"
                android:endColor="@color/darkslategray"
                android:gradientRadius="50"
                android:type="radial"/>

            <corners
                android:radius="5dp" />

            <padding
                android:left="5dp"
                android:top="10dp"
                android:right="5dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="@color/dodgerblue"
                android:endColor="@color/dodgerblue"
                android:gradientRadius="50"
                android:type="radial"/>

            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="10dp"
                android:right="5dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:color="@color/dodgerblue"/>
            <gradient
                android:startColor="@color/dodgerblue"
                android:endColor="@color/dodgerblue"
                android:angle="90" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="10dp"
                android:right="5dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>